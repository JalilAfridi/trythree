<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/buttonshape"
    tools:context="com.example.sahil.try3.popup">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/popup_image"
        android:src="@drawable/shapes"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/popup_textView"
        android:layout_above="@+id/pop_button"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/popup_image"
        android:layout_alignParentTop="true"
        android:textAlignment="center"

        android:textIsSelectable="true"
        android:textSize="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Okay!"
        android:background="@drawable/buttonshape"
        android:id="@+id/pop_button"
        android:layout_below="@+id/popup_image"
        android:layout_alignEnd="@+id/popup_textView" />
</RelativeLayout>
